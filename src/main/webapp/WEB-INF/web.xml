<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>dishvote</display-name>

    <servlet>
        <servlet-name>restaurantServlet</servlet-name>
        <servlet-class>ru.dsoccer1980.dishvote.web.RestaurantServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>userVoteServlet</servlet-name>
        <servlet-class>ru.dsoccer1980.dishvote.web.UserVoteServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>menuServlet</servlet-name>
        <servlet-class>ru.dsoccer1980.dishvote.web.MenuServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>restaurantServlet</servlet-name>
        <url-pattern>/restaurant</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userVoteServlet</servlet-name>
        <url-pattern>/userVote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>menuServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>


</web-app>
