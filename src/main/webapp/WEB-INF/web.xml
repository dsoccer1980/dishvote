<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>dishvote</display-name>

    <servlet>
        <servlet-name>restaurantServlet</servlet-name>
        <servlet-class>ru.dsoccer1980.dishvote.web.RestaurantServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>userVoteServlet</servlet-name>
        <servlet-class>ru.dsoccer1980.dishvote.web.UserVoteServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>adminVoteServlet</servlet-name>
        <servlet-class>ru.dsoccer1980.dishvote.web.AdminVoteServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>menuServlet</servlet-name>
        <servlet-class>ru.dsoccer1980.dishvote.web.MainMenuServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>dishServlet</servlet-name>
        <servlet-class>ru.dsoccer1980.dishvote.web.DishServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>ru.dsoccer1980.dishvote.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>adminServlet</servlet-name>
        <servlet-class>ru.dsoccer1980.dishvote.web.AdminServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>mainPageServlet</servlet-name>
        <servlet-class>ru.dsoccer1980.dishvote.web.mainPageServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>restaurantServlet</servlet-name>
        <url-pattern>/restaurant</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userVoteServlet</servlet-name>
        <url-pattern>/userVote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminVoteServlet</servlet-name>
        <url-pattern>/adminVote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>menuServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dishServlet</servlet-name>
        <url-pattern>/dish</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mainPageServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

